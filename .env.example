# Environment Configuration Template
# Copy this file to .env and add your actual API keys

# Environment Type
ENVIRONMENT=local

# SQL Server Database Configuration (via SSH Tunnel)
# SSH Tunnel Command: gcloud compute start-iap-tunnel gcp-hr-applications 1433 --local-host-port=localhost:1435 --zone=asia-southeast2-a

# Main Database Configuration (Consolidated g_id)
DATABASE_URL=mssql+pyodbc://your_user:your_password@127.0.0.1:1435/organization_chart?driver=ODBC+Driver+17+for+SQL+Server
DATABASE_HOST=127.0.0.1
DATABASE_PORT=1435
DATABASE_NAME=organization_chart
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password

# Source Database Configuration (Same as main - consolidated)
SOURCE_DATABASE_URL=mssql+pyodbc://your_user:your_password@127.0.0.1:1435/organization_chart?driver=ODBC+Driver+17+for+SQL+Server
SOURCE_DATABASE_HOST=127.0.0.1
SOURCE_DATABASE_PORT=1435
SOURCE_DATABASE_NAME=organization_chart
SOURCE_DATABASE_USER=your_database_user
SOURCE_DATABASE_PASSWORD=your_database_password

# Database Performance Configuration (optimized for local)
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=10
DATABASE_POOL_RECYCLE=1800
QUERY_TIMEOUT=30

# File Upload Settings
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=xlsx,xls,csv

# API Keys (REQUIRED - Get your keys from respective providers)
REACT_APP_OPENAI_API_KEY=your-openai-api-key-here
REACT_APP_GEMINI_API_KEY=your-gemini-api-key-here

# Server Configuration
PORT=3050
NODE_ENV=development

# Application Settings
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true
REACT_APP_APP_NAME="HRAI - Mining Industry Position Qualification Assessment"
REACT_APP_VERSION=1.0.0