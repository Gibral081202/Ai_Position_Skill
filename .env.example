# Environment Configuration Template
# Copy this file to .env for local development or .env.production for server deployment

# OpenAI API Configuration - REQUIRED
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (adjust for your environment)
DATABASE_URL=mssql+pyodbc://username:password@host:port/database?driver=ODBC+Driver+17+for+SQL+Server&TrustServerCertificate=yes
DATABASE_HOST=your_database_host
DATABASE_PORT=1433
DATABASE_NAME=organization_chart
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password

# Source Database Configuration (same as main in most cases)
SOURCE_DATABASE_URL=mssql+pyodbc://username:password@host:port/database?driver=ODBC+Driver+17+for+SQL+Server&TrustServerCertificate=yes
SOURCE_DATABASE_HOST=your_database_host
SOURCE_DATABASE_PORT=1433
SOURCE_DATABASE_NAME=organization_chart
SOURCE_DATABASE_USER=your_database_user
SOURCE_DATABASE_PASSWORD=your_database_password

# Database Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
QUERY_TIMEOUT=60

# File Upload Settings
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=xlsx,xls,csv

# Application Configuration
PORT=3050
NODE_ENV=production
PUBLIC_URL=/mining-hr
HOST=0.0.0.0
GENERATE_SOURCEMAP=false
DISABLE_ESLINT_PLUGIN=true

# Application Metadata
REACT_APP_APP_NAME="HRAI - Mining Industry Position Qualification Assessment"
REACT_APP_VERSION=1.0.0

# Legacy API Keys (if needed for compatibility)
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here